<h5 class="mb-3"><b>Lista de Habitaciones</b></h5>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Reserva</th>
                <th>Precio</th>                
                <th>Hotel</th>                
            </tr>
            <% @habitacion.each do |h| %>
                <tr>
                    <td class="text-center">
                        <%= h.id %>
                    </td>
                    <td class="">
                        <%= h.nombre %>
                    </td>
                    <td class="">
                        <%= h.reservada %>
                    </td>
                    <td class="">
                        <%= h.precio %>
                    </td>

                    <td class="">
                        <%= h.hotel %>
                    </td>
                    <td class="text-center">
                        <%= link_to "Editar", editar_habitacion_path(h), class: 'btn btn-warning' %>
                        <%= link_to "Eliminar", habitacion_path(h), 
                        method: :delete, 
                        class: 'btn btn-danger',
                        data: { confirm: "¿Está seguro que quiere eliminar esta habitacion?" } %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>